<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctl="clr-namespace:WonderfulPanda.Controls;assembly=WonderfulPanda.Controls"
        xmlns:local="clr-namespace:WpfApplication1"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <x:Array x:Key="columns" Type="GridViewColumn">
            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" />
            <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Value}" />
        </x:Array>
        <local:ViewModel x:Key="viewmodel" />
    </Window.Resources>
    <Grid>
        <ctl:ListViewEx Columns="{StaticResource columns}"
                        FrozenColumnIndex="0"
                        ItemsSource="{Binding Path=Items, Source={StaticResource viewmodel}}"
                        >
            
        </ctl:ListViewEx>
    </Grid>
</Window>
